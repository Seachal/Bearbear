            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/login_phone" android:background="@drawable/login_btn_two_style" android:layout_width="0.0dip" android:layout_height="@dimen/dp_41" android:layout_weight="1.0">
