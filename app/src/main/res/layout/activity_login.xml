            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/login_wechat" android:background="@drawable/login_btn_two_style" android:layout_width="0.0dip" android:layout_height="@dimen/dp_41" android:layout_weight="1.0" android:layout_marginStart="@dimen/dimen_8">
                <ImageView android:layout_width="@dimen/dimen_28" android:layout_height="@dimen/dimen_28" android:src="@mipmap/login_wechat" />
